<h1>Exercise Details</h1>

<form method="post">
    <fieldset>
        <label for="name" class="col-2">Name:</label>
        <input name="name" id="name" required />
    </fieldset>
    <fieldset>
        <label for="dueDate" class="col-2">Date:</label>
        <input name="dueDate" id="dueDate" required type="date" />
    </fieldset>
    <fieldset>
        <label for="description" class="col-2">Description:</label>
        <input name="description" id="description" required />
    </fieldset>
    <fieldset>
        <label for="length" class="col-2">Length(minutes):</label>
        <input name="length" id="length" required type="number"/>
    </fieldset>
    <fieldset>
        <label for="category" class="col-2">Category:</label>
        <select name="category" id="category">
            {{#each categories}}
                <option>{{this.categoryCode}}</option>
            {{/each}}
        </select>
    </fieldset>
    <button class="offset-3 btn btn-primary">Save</button>
</form>
